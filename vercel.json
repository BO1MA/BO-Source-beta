{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.py"
    },
    {
      "src": "/api/set_webhook",
      "dest": "/api/set_webhook.py"
    },
    {
      "src": "/api/cron",
      "dest": "/api/cron.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/webhook.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ]
}
